# ============================================================================
# EcoTrace Frontend - Environment Configuration Template
# ============================================================================
# Copy this file to .env and update with your actual values
# Command: cp .env.example .env
# ============================================================================

# ============================================================================
# API Configuration
# ============================================================================
# Backend API URL
VITE_API_BASE_URL=http://localhost:8000

# API endpoints
VITE_API_HEALTH=/api/health
VITE_API_SEARCH=/api/search
VITE_API_COMPANIES=/api/companies
VITE_API_CLAIMS=/api/claims
VITE_API_GRAPH=/api/graph
VITE_API_ANALYTICS=/api/analytics
VITE_API_CRAWL=/api/crawl

# ============================================================================
# Application Settings
# ============================================================================
VITE_APP_NAME=EcoTrace
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Corporate Sustainability Claims Verification

# ============================================================================
# Feature Flags
# ============================================================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_LIVE_CRAWLER=true
VITE_ENABLE_KNOWLEDGE_GRAPH=true
VITE_ENABLE_DARK_MODE=true

# ============================================================================
# External Services (Optional)
# ============================================================================
# Google Analytics
VITE_GA_TRACKING_ID=

# Sentry (Error Tracking)
VITE_SENTRY_DSN=

# Mapbox (for location-based features)
VITE_MAPBOX_TOKEN=

# ============================================================================
# Development Settings
# ============================================================================
# Port for development server
VITE_PORT=3000

# Enable HMR (Hot Module Replacement)
VITE_HMR=true

# ============================================================================
# NOTES
# ============================================================================
# - All environment variables must be prefixed with VITE_ to be accessible
# - Never commit .env files to version control
# - Update API_BASE_URL for production deployment
# ============================================================================
