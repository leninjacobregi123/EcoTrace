# ============================================================================
# EcoTrace Backend - Environment Configuration Template
# ============================================================================
# Copy this file to .env and update with your actual values
# Command: cp .env.example .env
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=EcoTrace
APP_ENV=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# ELASTICSEARCH CONFIGURATION
# ============================================================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme

# Index names
ELASTICSEARCH_COMPANIES_INDEX=ecotrace_companies
ELASTICSEARCH_CLAIMS_INDEX=ecotrace_claims
ELASTICSEARCH_NEWS_INDEX=ecotrace_news
ELASTICSEARCH_PUBLICATIONS_INDEX=ecotrace_publications

# ============================================================================
# NEO4J CONFIGURATION
# ============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# ============================================================================
# MONGODB CONFIGURATION
# ============================================================================
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password
MONGODB_DATABASE=ecotrace
MONGODB_AUTH_SOURCE=admin

# ============================================================================
# SCRAPY CRAWLER SETTINGS
# ============================================================================
# User agent for web requests
USER_AGENT="Mozilla/5.0 (compatible; EcoTrace-Bot/1.0; +https://ecotrace.ai/bot)"

# Crawl settings
ROBOTSTXT_OBEY=False
CONCURRENT_REQUESTS=16
DOWNLOAD_DELAY=2
CLOSESPIDER_TIMEOUT=90
CLOSESPIDER_ITEMCOUNT=20

# Playwright settings (for JavaScript rendering)
PLAYWRIGHT_BROWSER_TYPE=chromium
PLAYWRIGHT_LAUNCH_HEADLESS=True
PLAYWRIGHT_DEFAULT_TIMEOUT=30000

# ============================================================================
# NLP & AI SETTINGS
# ============================================================================
# SpaCy model (optional - for advanced NLP)
SPACY_MODEL=en_core_web_sm

# OpenAI API (optional - for GPT features)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face (optional - for transformer models)
HUGGINGFACE_API_KEY=your_huggingface_key_here

# ============================================================================
# API SETTINGS
# ============================================================================
# CORS settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# API rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# SECURITY
# ============================================================================
# Secret key for JWT tokens
SECRET_KEY=your-secret-key-change-this-in-production

# JWT settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/ecotrace.log

# ============================================================================
# CELERY (Optional - for background tasks)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================================================
# REDIS (Optional - for caching)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# EMAIL (Optional - for alerts)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@ecotrace.com

# ============================================================================
# MONITORING & ANALYTICS (Optional)
# ============================================================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================================================
# EXTERNAL APIs (Optional)
# ============================================================================
# News API
NEWS_API_KEY=your-news-api-key

# SEC EDGAR API
SEC_USER_AGENT=YourCompany your-email@example.com

# EPA API
EPA_API_KEY=your-epa-api-key

# ============================================================================
# DEVELOPMENT/DEBUG FLAGS
# ============================================================================
# Enable SQL query logging
SQL_ECHO=False

# Reload on code changes
RELOAD=True

# Enable profiler
ENABLE_PROFILER=False

# ============================================================================
# NOTES
# ============================================================================
# - Never commit .env files to version control
# - Use strong passwords in production
# - Update SECRET_KEY before deployment
# - Set DEBUG=False in production
# - Configure proper CORS origins for production
# - Enable HTTPS in production
# ============================================================================
